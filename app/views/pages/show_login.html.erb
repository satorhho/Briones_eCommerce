<h1>Please login</h1>

<p id="login_notice"><%= notice %><p>

<%= form_tag "/login", method: :post do%>
    <p>
        E-mail:
        <%= text_field_tag :email %>
    </p>

    <p>
        Password:
        <%= password_field_tag :password %>
    </p>

    <p>
        <%= submit_tag :submit %>
    </p>
<% end %>

<div id="no_account">
    Dont have an account?
</div>
<a href="users/new">Sign-up</a>
